generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id             String                     @id @default(uuid())
  name           String
  description    String?
  type           TransactionType
  amount         Decimal                    @db.Decimal(10, 2)
  importJobId    String?
  category       TransactionCategory
  paymentMethod  TransactionPaymentMethod
  date           DateTime
  dueDate        DateTime?
  isRecurring    Boolean                    @default(false)
  createdAt      DateTime                   @default(now())
  updatedAt      DateTime                   @updatedAt
  deletedAt      DateTime?
  userId         String
  user           User                       @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId     String?
  categoryRef    Category?                  @relation(fields: [categoryId], references: [id])
  notifications  Notification[]

  @@index([userId])
  @@index([date])
  @@index([userId, date])
  @@index([deletedAt])
  @@index([importJobId])
  @@index([dueDate])
}

model ImportJob {
  id         String          @id @default(uuid())
  userId     String
  status     ImportJobStatus @default(PROCESSING)
  total      Int             @default(0)
  processed  Int             @default(0)
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
}

model Notification {
  id            String           @id @default(uuid())
  userId        String
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  type          NotificationType
  title         String
  message       String
  isRead        Boolean          @default(false)
  transactionId String?
  transaction   Transaction?     @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@index([userId])
  @@index([userId, isRead])
  @@index([createdAt])
}

enum NotificationType {
  DUE_DATE_REMINDER
  OVERDUE
  LOW_BALANCE
  HIGH_EXPENSE
  BUDGET_ALERT
  MONTHLY_SUMMARY
  PAYMENT_RECEIVED
}

enum TransactionType {
  DEPOSIT
  EXPENSE
  INVESTMENT
}

enum TransactionCategory {
  HOUSING        @map("housing")
  TRANSPORTATION @map("transportation")
  FOOD           @map("food")
  ENTERTAINMENT  @map("entertainment")
  HEALTH         @map("health")
  UTILITY        @map("utility")
  SALARY         @map("salary")
  EDUCATION      @map("education")
  OTHER          @map("other")
  SIGNATURE      @map("signature")
  FOOD_DELIVERY  @map("food_delivery")
  GAMING         @map("gaming")
  SERVICES       @map("services")
  STREAMING      @map("streaming")
}

enum TransactionPaymentMethod {
  CREDIT_CARD   @map("credit_card")
  DEBIT_CARD    @map("debit_card")
  BANK_TRANSFER @map("bank_transfer")
  BANK_SLIP     @map("bank_slip")
  CASH          @map("cash")
  PIX           @map("pix")
  OTHER         @map("other")
}

model User {
  id            String         @id @default(uuid())
  clerk_id      String?        @unique
  email         String         @unique
  name          String
  createdAt     DateTime       @default(now())
  transactions  Transaction[]
  categories    Category[]
  notifications Notification[]
}

model Category {
  id           String        @id @default(uuid())
  name         String
  userId       String
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@unique([userId, name])
}

enum ImportJobStatus {
  PROCESSING
  COMPLETED
  FAILED
}
