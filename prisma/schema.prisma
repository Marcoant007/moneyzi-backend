generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id             String                     @id @default(uuid())
  name           String
  description    String?
  type           TransactionType
  amount         Decimal                    @db.Decimal(10, 2)
  importJobId    String?
  category       TransactionCategory
  paymentMethod  TransactionPaymentMethod
  date           DateTime
  dueDate        DateTime?
  isRecurring    Boolean                    @default(false)
  paymentStatus  PaymentStatus              @default(PENDING)
  paidAt         DateTime?
  createdAt      DateTime                   @default(now())
  updatedAt      DateTime                   @updatedAt
  deletedAt      DateTime?
  userId         String
  user           User                       @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId     String?
  categoryRef    Category?                  @relation(fields: [categoryId], references: [id])
  creditCardId   String?
  creditCard     CreditCard?                @relation(fields: [creditCardId], references: [id], onDelete: SetNull)
  accountId      String?
  account        Account?                   @relation(fields: [accountId], references: [id], onDelete: SetNull)
  notifications  Notification[]

  @@index([userId])
  @@index([date])
  @@index([userId, date])
  @@index([deletedAt])
  @@index([importJobId])
  @@index([dueDate])
  @@index([creditCardId])
  @@index([accountId])
  @@index([paymentStatus])
  @@index([userId, paymentStatus])
}

model ImportJob {
  id                  String          @id @default(uuid())
  userId              String
  status              ImportJobStatus @default(PROCESSING)
  total               Int             @default(0)
  processed           Int             @default(0)
  isCreditCardInvoice Boolean         @default(false)
  creditCardId        String?
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt

  @@index([creditCardId])
}

model Notification {
  id            String           @id @default(uuid())
  userId        String
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  type          NotificationType
  title         String
  message       String
  isRead        Boolean          @default(false)
  transactionId String?
  transaction   Transaction?     @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @default(now()) @updatedAt

  @@index([userId])
  @@index([userId, isRead])
  @@index([createdAt])
}

enum NotificationType {
  DUE_DATE_REMINDER
  OVERDUE
  LOW_BALANCE
  HIGH_EXPENSE
  BUDGET_ALERT
  MONTHLY_SUMMARY
  PAYMENT_RECEIVED
}

enum PaymentStatus {
  PENDING
  PAID
}

enum TransactionType {
  DEPOSIT
  EXPENSE
  INVESTMENT
}

enum TransactionCategory {
  HOUSING        @map("housing")
  TRANSPORTATION @map("transportation")
  FOOD           @map("food")
  ENTERTAINMENT  @map("entertainment")
  HEALTH         @map("health")
  UTILITY        @map("utility")
  SALARY         @map("salary")
  EDUCATION      @map("education")
  OTHER          @map("other")
  SIGNATURE      @map("signature")
  FOOD_DELIVERY  @map("food_delivery")
  GAMING         @map("gaming")
  SERVICES       @map("services")
  STREAMING      @map("streaming")
}

enum TransactionPaymentMethod {
  CREDIT_CARD   @map("credit_card")
  DEBIT_CARD    @map("debit_card")
  BANK_TRANSFER @map("bank_transfer")
  BANK_SLIP     @map("bank_slip")
  CASH          @map("cash")
  PIX           @map("pix")
  OTHER         @map("other")
}

model User {
  id            String         @id @default(uuid())
  clerk_id      String?        @unique
  email         String         @unique
  name          String
  createdAt     DateTime       @default(now())
  transactions  Transaction[]
  accounts      Account[]
  categories    Category[]
  notifications Notification[]
  creditCards   CreditCard[]
}

model Category {
  id           String        @id @default(uuid())
  name         String
  userId       String
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@unique([userId, name])
}

enum ImportJobStatus {
  PROCESSING
  COMPLETED
  FAILED
}

model CreditCard {
  id             String        @id @default(uuid())
  name           String        
  lastFourDigits String?       
  brand          CardBrand?    
  limit          Decimal?      @db.Decimal(10, 2)
  closingDay     Int?          
  dueDay         Int?          
  color          String        @default("#3b82f6") 
  isActive       Boolean       @default(true)
  userId         String
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions   Transaction[] 
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([userId])
  @@index([userId, isActive])
}

model Account {
  id             String      @id @default(uuid())
  name           String
  type           AccountType @default(CHECKING)
  initialBalance Decimal     @default(0) @db.Decimal(10, 2)
  color          String?
  icon           String?
  isActive       Boolean     @default(true)
  userId         String
  user           User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions   Transaction[]
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  @@index([userId])
  @@index([userId, isActive])
}

enum AccountType {
  CHECKING
  SAVINGS
  INVESTMENT
  CASH
  PIGGY_BANK
  OTHER
}

enum CardBrand {
  VISA
  MASTERCARD
  ELO
  AMEX
  HIPERCARD
  OTHER
}
